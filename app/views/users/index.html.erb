<% @users.each do |user| %>
  <h4><%= user.username %></h4>
  <ul>
    <li>Email: <%= user.email %></li>
    <li>Role: <%= user.role %></li>
    <li>User Since: <%= user.remember_created_at %></li>
    <li>Last Sign In: <%= user.last_sign_in_at %></li>
  </ul>
  <%= link_to "Delete user #{user.username}", user_path(user), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
<% end %>
